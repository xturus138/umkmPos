<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvKodeTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INV-2025-001"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPriceTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp60.000"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar_icon"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvKodeTransaksi"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDateTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27 Nov 2025"
                android:textSize="14sp"
                android:textColor="@color/grayText"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/imgDate"
                app:layout_constraintTop_toTopOf="@id/imgDate"
                app:layout_constraintBottom_toBottomOf="@id/imgDate"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock_icon"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/tvDateTransaksi"
                app:layout_constraintTop_toBottomOf="@id/tvKodeTransaksi"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTimeTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textSize="14sp"
                android:textColor="@color/grayText"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/imgClock"
                app:layout_constraintTop_toTopOf="@id/imgClock"
                app:layout_constraintBottom_toBottomOf="@id/imgClock"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatusTranasaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/greenLight"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@+id/tvPriceTransaksi"
                app:layout_constraintStart_toStartOf="@+id/tvPriceTransaksi"
                app:layout_constraintTop_toBottomOf="@id/tvPriceTransaksi"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_check_icon" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Selesai"
                        android:textColor="@color/greenLeaves"
                        android:textSize="14sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/containerListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blueLight"
                app:strokeWidth="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardStatusTranasaksi">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvListItemNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/tvTipePembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/containerListItem"
                app:layout_constraintTop_toBottomOf="@id/containerListItem"
                android:text="Tunai"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvTipeCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walk-in Customer"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textColor="@color/grayLight"
                app:layout_constraintStart_toEndOf="@id/tvTipePembayaran"
                app:layout_constraintTop_toTopOf="@id/tvTipePembayaran"
                app:layout_constraintBottom_toBottomOf="@id/tvTipePembayaran"/>


            <TextView
                android:id="@+id/tvDetailTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Detail ->"
                android:textColor="@color/blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTipeCustomer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTipeCustomer" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>